    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/helper-builder-react-jsx": "^7.19.0",
    "@babel/helper-builder-react-jsx-experimental": "^7.12.11",
    "@babel/helper-environment-visitor": "^7.18.9",
    "@babel/helper-string-parser": "^7.19.4",
    "@babel/plugin-transform-react-jsx-source": "^7.19.6",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.12.7",
    "@changesets/cli": "^2.24.1",
    "@emotion/babel-preset-css-prop": "^11.10.0",
    "@emotion/react": "11.5.0",
    "@guardian/libs": "12.0.0",
    "@guardian/prettier": "^0.4.2",
    "@guardian/source-foundations": "7.0.1",
    "@guardian/source-react-components": "9.0.1",
    "@guardian/tsconfig": "^0.1.6",
    "@rollup/plugin-babel": "^6.0.2",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/addon-essentials": "^6.5.13",
    "@storybook/addon-links": "^6.5.13",
    "@storybook/builder-vite": "^0.2.4",
    "@storybook/core-common": "^6.5.13",
    "@storybook/core-server": "^6.5.13",
    "@storybook/react": "^6.5.13",
    "@testing-library/dom": "^8.20.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.10.2",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/rollup-plugin-visualizer": "^4.2.1",
    "@vitejs/plugin-react": "^2.1.0",
    "babel-plugin-const-enum": "^1.2.0",
    "eslint": "^8.26.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fetch-mock": "^9.3.1",
    "husky": "^8.0.0",
    "jest": "^26.6.3",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "mockdate": "^3.0.2",
    "np": "^7.2.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.3",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "require-from-string": "^2.0.2",
    "rollup": "^3.2.5",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-visualizer": "^5.9.0",
    "storybook-chromatic": "^4.0.2",
    "ts-jest": "^26.5.0",
    "tslib": "^2.4.1",
    "typescript": "^4.8.4",
    "vite": "3.2.4",
    "web-vitals": "^3.0.4"
  },
  "scripts": {
    "build": "vite build && yarn tsc",
    "dev": "vite",
    "test": "jest",
    "validate": "yarn tsc && yarn test && yarn lint",
    "prettier:check": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "storybook": "start-storybook",
    "build-storybook": "build-storybook",
    "lint": "eslint . --ext .ts,.tsx",
    "release": "yarn validate && yarn build && yarn np",
    "release:changesets": "yarn validate && yarn build && changeset publish",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    },
    "overrides": [
      {
        "files": [
          "src/**/*.stories.tsx"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ],
    "ignorePatterns": [
      "build"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom-sixteen",
    "transformIgnorePatterns": [
      "node_modules/(?!(@guardian/libs)/)"
    ],
    "preset": "ts-jest/presets/js-with-babel",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.test.+(ts|tsx|js)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ]
  }
}
