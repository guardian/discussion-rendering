{
    "extends": "@guardian/tsconfig/tsconfig.json",
    "compilerOptions": {
        "lib": ["es2017", "es7", "es6", "dom", "DOM.Iterable"],
        "outDir": "build",
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": false,
        "noEmit": false,
        "incremental": true,
        "declaration": true,
        "emitDeclarationOnly": true,
    },
    "files": ["src/types.ts"],
    "include": ["src/"],
    "exclude": []
}
